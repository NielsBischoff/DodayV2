<!-- app/views/tasks/new.html.erb -->
<h1>Edit Task</h1>
<%= form_for @task do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :due %>
    <%= f.text_field :due %>
  </div>

  <div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
  <div>
    <%= f.label :urgent %>
    <%= f.check_box :urgent %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>